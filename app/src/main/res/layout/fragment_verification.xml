<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Verification">

        <TextView
            android:id="@+id/verification_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Verification"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verification_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:text="
Enter the 6 digit number sent to"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_text_view_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="+91 7905504391"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.chaos.view.PinView
            android:id="@+id/pin_view"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_text_view"
            android:layout_centerHorizontal="true"
            android:cursorVisible="true"
            android:hint=""
            android:inputType="text"
            android:itemBackground="#E8E8E8"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:cursorColor="@color/black"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="58dp"
            app:itemRadius="6dp"
            app:itemSpacing="0dp"
            app:itemWidth="58dp"
            app:lineColor="#C4C4C4"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

        <Button
            android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/pin_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:text="Continue"
            android:textAllCaps="false"
            app:cornerRadius="24dp" />

    </RelativeLayout>

</layout>